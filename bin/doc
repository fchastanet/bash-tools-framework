  "${SRC_DIR}" \
  "${ROOT_DIR}/jekyll/bashDoc" \
  "${ROOT_DIR}/jekyll/Index.md" \
  '(/_\.sh|/ZZZ\.sh|_includes/.*\.sh|/__all\.sh)$'

cp "${ROOT_DIR}/README.md" "${ROOT_DIR}/jekyll"
